<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <meta name="description" content="" />
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="~/img/favicon.png" type="image/x-icon" />
    <link rel="icon" href="~/img/favicon.png" type="image/x-icon" />

    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,400i,700,700i,900,900i&amp;subset=latin-ext" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Libre+Baskerville:400,400i,700&amp;subset=latin-ext" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/animations.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/colorbox.css" rel="stylesheet" />
    <link href="~/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/css/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/css/jquery.mCustomScrollbar.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <link href="~/css/snackbar.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>

    <header>
        <div class="header-top">
            <div class="header-left">
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-linkedin"></i></a>
            </div>
            <div class="header-mid">
                <a href="@Url.Action("Index","Home")"><img src="/img/logo.png" class="logo" /></a>
            </div>
            <div class="header-right">

                <a href="#" class="top-btn">Subscribe</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="top-btn" href="@Url.Action("Login","Account")">Login</a>
                }
                else
                {
                    <a class="top-btn" href="@Url.Action("Logout","Account")">Logout</a>
                }
            </div>
        </div>
        <nav>
            <ul>
                <li class="@(@Context.Request.Path.ToString().ToLower()=="/articles" ? "active":"")">
                    <a href="@Url.Action("Index","Articles")">ARTICLES </a>
                </li>
                @*<li>
                    <a href="@Url.Action("Index","Affiliates")">AFFILIATES</a>
                </li>*@
                <li class="@(@Context.Request.Path.ToString().ToLower()=="/contributors" ? "active":"")">
                    <a href="@Url.Action("Index","Contributors")">CONTRIBUTORS</a>
                </li>
                <li class="@(@Context.Request.Path.ToString().ToLower()=="/ınformation/aboutus" ? "active":"")">
                    <a href="@Url.Action("AboutUs","Information")">ABOUT US</a>
                </li>
            </ul>
        </nav>
        <div class="mobile-menu">
            <div onclick="openNav()" id="menuToggle">
                <input type="checkbox" />
                <span></span>
                <span></span>
                <span></span>
            </div>

            <div id="mySidenav" class="sidenav">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i></a>
                <a href="@Url.Action("Index","Articles")">Articles</a>
                @*<a href="@Url.Action("Index","Affiliates")">Affiliates</a>*@
                <a href="@Url.Action("Index","Contributors")">Contributors</a>
                <a href="@Url.Action("AboutUs","Information")">About Us</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a href="@Url.Action("Login","Account")">Login</a>
                }
                else
                {
                    <a href="@Url.Action("Logout","Account")">Logout</a>
                }
            </div>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="footer-logo">
                        <a href="/"><img src="~/img/logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-md-3">
                    <b>Legal Policy</b><br />
                    <a href="@Url.Action("UserAgreementAndDisclaimer","Information")">User Agreement and Disclaimer</a><br />
                    <a href="@Url.Action("EditorialGuidelines","Information")">Editorial Guidelines</a><br />
                    <a href="@Url.Action("EditorialPolicy","Information")">Editorial Policy</a><br />
                </div>
                <div class="col-md-3">
                    <b>General Information</b><br />
                    <a href="@Url.Action("Contact","Information")">Contact</a><br />
                    <a href="@Url.Action("AboutUs","Information")">About Us</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.colorbox-min.js"></script>
    <script src="~/js/jquery.mCustomScrollbar.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/jquery.cookie.js"></script>
    <script src="~/js/snackbar.min.js"></script>
    <script>var URL = "//www.turkishlawblog.tk/";</script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script src="~/js/application.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
